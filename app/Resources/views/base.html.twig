<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}

        {# Bootstrap #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
    </head>
    <body>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <nav class="d-flex justify-content-between mx-2">
            <div class="d-flex align-items-center">
                <h5 class="m-0"><a href="{{ path('searchCompanies') }}" class="nav-link">ListCompanies</a></h5>
                <ul class="nav">
                    <li class="nav-item">
                        <a href="{{ path('searchCompanies') }}" class="nav-link text-secondary">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('listCompanies') }}" class="nav-link text-secondary">Empresas</a>
                    </li>

                    {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('categories') }}" class="nav-link text-secondary">Categorias</a>
                    </li>
                    {% endif %}
                    
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a href="{{ path('listUser') }}" class="nav-link text-secondary">Usu√°rios</a>
                    </li>
                    {% endif %}

                </ul>
            </div>
            <div class="d-flex align-items-center gap-2">
                {% if app.user %}
                    <p class="m-0">Bem vindo(a): {{ app.user.username }}</p>
                {% endif %}
                
                <a href="{{ path('perfil') }}" class="btn btn-primary btn-sm">Perfil</a>
                <a href="{{ path('logout') }}" class="btn btn btn-outline-secondary btn-sm">Sair</a>
            </div>
        </nav>
        {% endif %}
        
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        
        {# Bootstrap #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </body>
</html>
