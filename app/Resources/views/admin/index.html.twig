{% extends "base.html.twig" %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Lista de usuários</h1>
    <div class="d-flex justify-content-end ">
        <a href="{{ path('newUser') }}" class="btn btn-primary btn-sm">Novo usuário</a>
    </div>
    <hr>

    {% if users is not empty %}
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">E-mail</th>
            <th scope="col">Telefone</th>
            <th scope="col">Tipo</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr scope="row">
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.user_type }}</td>
                <td>
                  <a href="{{ path('adminUpdateUser', {id: user.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                  <a href="{{ path('deleteUser', {id: user.id}) }}" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <h2 class="text-center">Nenhum usuário encontrado!</h2>
    {% endif %}   
</div>
{% endblock %}
