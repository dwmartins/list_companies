{% extends "base.html.twig" %}
{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center">Atualizar usu√°rio</h1>
    <hr>

    <div class="d-flex flex-column align-items-center">
        {{ form_start(form, {'attr': {'class': 'w-100 form-register-user needs-validation', 'novalidate': 'novalidate'}}) }}
        {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}

        {{ form_row(form.roles, {'attr': {'class': 'form-select mb-2'}}) }}

        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary btn-sm w-100 ">Atualizar</button>
        {{ form_end(form) }}
    </div>
</div>
<script src="{{ asset('js/main.js') }}"></script>
{% endblock %}