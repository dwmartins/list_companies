{% extends "base.html.twig" %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Editar categoria</h1>
    <hr>

    {% if msg %}
        <p class="text-center text-success">{{ msg }}</p>
    {% endif %}

    <div class="d-flex flex-column align-items-center">
        {{ form_start(form, {'attr': {'class': 'w-100 form-new-category needs-validation', 'novalidate': 'novalidate'}}) }}
        {{ form_row(form.name, {'attr': {'class': 'form-control mb-2'}}) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary btn-sm w-100 ">Atualizar</button>
        {{ form_end(form) }}
    </div>
</div>
<script src="{{ asset('js/main.js') }}"></script>
{% endblock %}